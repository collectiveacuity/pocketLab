{
  "metadata": {
    "comments": "lab project configuration file"
  },
  "schema": {
    "docker_image_name": "flaskserver",
    "docker_container_alias": "server",
    "docker_mount_volumes": {
      "data/": "/opt/data/"
    },
    "docker_port_mapping": {
      "5000": 5000
    },
    "docker_environment_variables": {
      "PORT": "5000"
    }
  },
  "components": {
    ".docker_image_name": {
      "default_value": "flaskserver",
      "max_length": 64,
      "must_contain": [ "^[a-z\\d\\-:_/]+$" ],
      "must_not_contain": [ "^\\d", "^\\-", "\\-$" ],
      "field_metadata": {
        "position": 1,
        "comments": "replace with preferred build image name"
      }
    },
    ".docker_container_alias": {
      "default_value": "server",
      "max_length": 64,
      "must_not_contain": [ "[^\\w\\-_]", "^\\d", "^\\-", "\\-$" ],
      "field_metadata": {
        "position": 2,
        "comments": "replace with preferred container alias"
      }
    },
    ".docker_mount_volumes": {
      "extra_fields": true,
      "field_metadata": {
        "position": 3,
        "comments": ""
      }
    },
    ".docker_port_mapping": {
      "extra_fields": true,
      "field_metadata": {
        "position": 4,
        "comments": ""
      }
    },
    ".docker_environment_variables": {
      "extra_fields": true,
      "field_metadata": {
        "position": 5,
        "comments": ""
      }
    },
    ".docker_mount_volumes.data/": {
      "required_field": false,
      "default_value": "opt/data/",
      "field_metadata": {
        "position": 0,
        "comments": ""
      }
    },
    ".docker_port_mapping.5000": {
      "required_field": false,
      "integer_data": true,
      "default_value": 5000,
      "field_metadata": {
        "position": 0,
        "comments": ""
      }
    },
    ".docker_environment_variables.PORT": {
      "required_field": false,
      "default_value": "5000",
      "field_metadata": {
        "position": 0,
        "comments": ""
      }
    }
  }
}